---
// packages
import type { HTMLAttributes } from 'astro/types'
import { twMerge } from 'tailwind-merge'

// props and types
interface Props extends HTMLAttributes<'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'> {
	variant?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
	classes?: string
}

const { variant = 'h2', classes, ...props } = Astro.props

const Tag = variant

//  component styles
// prettier-ignore
const styles = twMerge(
  "font-bold text-inherit",
variant === "h1" &&
    "text-[2rem] md:text-[4.0625rem] leading-snug md:leading-[4.46875rem] tracking-[-0.05156rem]" ||
  variant === "h2" &&
      "text-[1.75rem] md:text-[2.625rem] leading-snug md:leading-[4.46875rem] tracking-[-0.05156rem]" ||
  variant === "h3" &&
      "text-3xl md:text-[2.8125rem] leading-snug md:leading-[2.8125rem] tracking-[-0.04219rem]" ||
  variant === "h4" &&
      "text-xl md:text-[2rem] leading-snug md:leading-[2.6rem] tracking-[-0.03rem]" ||
  variant === "h5" &&
      "text-[1.375rem] md:text-[1.5rem] leading-snug md:leading-[1.95rem] tracking-[-0.0225rem]" ||
  variant === "h6" &&
      "text-xs md:text-[1.375rem] leading-snug md:leading-[1.7875rem] tracking-[-0.02063rem]",
      classes
);
---

<!-- heading -->
<Tag class={styles} {...props}><slot /></Tag>
