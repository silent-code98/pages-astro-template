---
// types
import type { HTMLAttributes } from 'astro/types'
// packages
import { twMerge } from 'tailwind-merge'

// props and types
interface Props extends HTMLAttributes<'a'> {
    tagType?: "a";
    link?: string;
    btnType: "primary" | "secondary" | "outline";
    size?: "sm" | "md" | "lg";
    classes?: string;
}

const {link = '#', btnType = 'primary', size, classes = '', tagType = "a", ...attrs} = Astro.props

// tag type
const Tag = tagType

// component styles
const styles = twMerge('text-[1.1875rem] w-max h-max pt-[1.25em] pb-[1.31em] font-cardo capitalize font-bold transition duration-200', btnType === "primary" && 'bg-secondary text-primary hover:bg-primary border border-secondary hover:border-primary hover:text-secondary' || btnType === 'outline' && 'bg-transparent border border-secondary text-primary hover:bg-secondary',  btnType === "secondary" && 'py-[0.19rem] px-[0.06rem] bg-transparent border-b border-b-2', size === "sm" && 'py-[0.8125rem] px-[2.0625rem]' || size === 'md' && 'pt-[1.25em] pb-[1.31rem] px-[3.5rem]' || size === 'lg' && 'pt-[1.25em] pb-[1.31rem] px-[5rem] md:px-[6rem]', classes)
---

<!-- link -->
 <Tag href={link} {...attrs} class:list={styles}><slot /></Tag> 