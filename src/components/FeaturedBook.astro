---
// components
import { Image } from 'astro:assets'
import Icon from 'astro-icon'
import Heading from './Heading.astro'
import Link from './Link.astro'

// props and types
interface Props {
	name: string
	desc: string
	pages: string
	length: string
	rating?: string
	image: string
}

const { name, desc, pages, length, rating = '0', image } = Astro.props
---

<!-- book wrapper -->
<div
	class="flex flex-col items-center gap-3 text-center md:flex-row md:gap-5 lg:items-center lg:justify-start lg:gap-[2.5rem] lg:text-left"
>
	<!-- book image / cover -->
	<Image
		src={image}
		alt={name}
		width={292.8}
		height={396.8}
		quality={100}
		class="w-full object-cover shadow-lg md:max-w-xs lg:max-w-[18.25rem]"
	/>

	<!-- book info -->
	<div
		class="flex max-w-xl flex-col items-center justify-center gap-3 md:items-start md:gap-[1.8rem]"
	>
		<Heading variant="h4" classes="text-center md:text-left">{name}</Heading>
		<p class="max-w-xs text-center md:text-left">
			{desc}
		</p>

		<!-- book features -->
		<div class="flex items-center justify-center gap-3">
			<div class="flex items-start gap-2">
				<Icon name="ic:baseline-circle" class="mt-1 w-5 text-secondary" />
				<div class="flex flex-col">
					<Heading variant="h6" classes="text-lg md:text-[1.5rem]">Pages:</Heading>
					<p>{pages}</p>
				</div>
			</div>
			<div class="flex items-start gap-2">
				<Icon name="ic:baseline-circle" class="mt-1 w-5 text-secondary" />
				<div class="flex flex-col">
					<Heading variant="h6" classes="text-lg md:text-[1.5rem]">Length:</Heading>
					<p>{length}</p>
				</div>
			</div>
		</div>

		<!-- order today button -->
		<Link link="/" btnType="outline" size="sm">Order Today</Link>
	</div>
</div>
