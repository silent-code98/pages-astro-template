---
// components
import { Image } from 'astro:assets'
import SocialLink from './SocialLink.astro'
import Heading from './Heading.astro'

// data
import { socialLinks } from '../data/social-links'
import { footerExplore, footerUtilityPages } from '../data/nav-links'
import Icon from 'astro-icon'
---

<footer class="bg-primary text-white">
	<div
		class="container flex flex-col flex-wrap gap-10 px-5 py-10 md:flex-row md:gap-6 md:py-16 lg:gap-[4rem]"
	>
		<!-- col 1 - logo & social links -->
		<div class="flex flex-1 flex-col gap-4 md:gap-7">
			<a href="/"><Image src="/images/logo.svg" alt="Pages" width={129} height={38} /></a>
			<div class="flex gap-3">
				{
					socialLinks.map((link) => (
						<SocialLink iconName={link.name} label={link.label} link={link.link} isFooter />
					))
				}
			</div>
		</div>

		<!-- col 2 - explore links -->
		<div class="flex flex-1 flex-col gap-4 md:gap-7">
			<Heading variant="h5">Explore</Heading>
			<ul class="flex flex-col gap-2 text-lg text-light-blue">
				{
					footerExplore.map((link) => (
						<li class="flex items-center gap-[1.19rem] ">
							<i class="dots-icon h-[0.22919rem] w-[1.375rem]">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									width="24"
									height="7"
									viewBox="0 0 24 7"
									fill="none"
								>
									<path
										d="M12.0003 1.66683C13.0128 1.66683 13.8337 2.48764 13.8337 3.50016C13.8337 4.51268 13.0128 5.3335 12.0003 5.3335C10.9878 5.3335 10.167 4.51268 10.167 3.50016C10.167 2.48764 10.9878 1.66683 12.0003 1.66683Z"
										stroke="#FFCA42"
										stroke-width="1.5"
									/>
									<path
										d="M21.1663 1.66683C22.1789 1.66683 22.9997 2.48764 22.9997 3.50016C22.9997 4.51268 22.1789 5.3335 21.1663 5.3335C20.1538 5.3335 19.333 4.51268 19.333 3.50016C19.333 2.48764 20.1538 1.66683 21.1663 1.66683Z"
										stroke="#FFCA42"
										stroke-width="1.5"
									/>
									<path
										d="M2.83333 1.66683C3.84586 1.66683 4.66667 2.48764 4.66667 3.50016C4.66667 4.51268 3.84586 5.3335 2.83333 5.3335C1.82081 5.3335 1 4.51268 1 3.50016C1 2.48764 1.82081 1.66683 2.83333 1.66683Z"
										stroke="#FFCA42"
										stroke-width="1.5"
									/>
								</svg>
							</i>
							<a href={link.href} class="transition duration-200 hover:text-secondary">
								{link.text}
							</a>
						</li>
					))
				}
			</ul>
		</div>

		<!-- col 3 - utility pages links -->
		<div class="flex flex-1 flex-col gap-4 md:gap-7">
			<Heading variant="h5">Utility Pages</Heading>
			<ul class="flex flex-col gap-2 text-lg text-light-blue">
				{
					footerUtilityPages.map((link) => (
						<li class="flex items-center gap-[1.19rem] ">
							<i class="dots-icon h-[0.22919rem] w-[1.375rem]">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									width="24"
									height="7"
									viewBox="0 0 24 7"
									fill="none"
								>
									<path
										d="M12.0003 1.66683C13.0128 1.66683 13.8337 2.48764 13.8337 3.50016C13.8337 4.51268 13.0128 5.3335 12.0003 5.3335C10.9878 5.3335 10.167 4.51268 10.167 3.50016C10.167 2.48764 10.9878 1.66683 12.0003 1.66683Z"
										stroke="#FFCA42"
										stroke-width="1.5"
									/>
									<path
										d="M21.1663 1.66683C22.1789 1.66683 22.9997 2.48764 22.9997 3.50016C22.9997 4.51268 22.1789 5.3335 21.1663 5.3335C20.1538 5.3335 19.333 4.51268 19.333 3.50016C19.333 2.48764 20.1538 1.66683 21.1663 1.66683Z"
										stroke="#FFCA42"
										stroke-width="1.5"
									/>
									<path
										d="M2.83333 1.66683C3.84586 1.66683 4.66667 2.48764 4.66667 3.50016C4.66667 4.51268 3.84586 5.3335 2.83333 5.3335C1.82081 5.3335 1 4.51268 1 3.50016C1 2.48764 1.82081 1.66683 2.83333 1.66683Z"
										stroke="#FFCA42"
										stroke-width="1.5"
									/>
								</svg>
							</i>
							<a href={link.href} class="transition duration-200 hover:text-secondary">
								{link.text}
							</a>
						</li>
					))
				}
			</ul>
		</div>

		<!-- col 4 - keep in touch -->
		<div class="flex flex-1 flex-col gap-4 md:gap-7">
			<Heading variant="h5">Keep in Touch</Heading>
			<ul class="flex flex-col gap-3 text-lg text-light-blue md:gap-4">
				<li class="flex gap-2 text-lg text-light-blue">
					<Heading variant="h6" class="flex-1 font-cardo text-lg font-bold">Address :</Heading>
					<span class="flex-[2] text-lg font-light text-light-blue"
						>24A Kingston St, Los Vegas NC 28202, USA.</span
					>
				</li>
				<li class="flex gap-2 text-lg text-light-blue">
					<Heading variant="h6" class="flex-1 font-cardo text-lg font-bold">Mail :</Heading>
					<span class="flex-[2] text-lg font-light text-light-blue"
						><a
							href="mailto:support@doctors.com"
							target="_blank"
							class="transition duration-200 hover:text-secondary">support@doctors.com</a
						></span
					>
				</li>
				<li class="flex gap-2 text-lg text-light-blue">
					<Heading variant="h6" class="flex-1 font-cardo text-lg font-bold">Phone :</Heading>
					<span class="flex-[2] text-lg font-light text-light-blue"
						><a
							href="tel:+221234567900"
							target="_blank"
							class="transition duration-200 hover:text-secondary">(+22) 123 - 4567 - 900</a
						></span
					>
				</li>
			</ul>
		</div>
	</div>
</footer>
