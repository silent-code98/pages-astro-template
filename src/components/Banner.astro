---
import Heading from './Heading.astro'
import Hr from './Hr.astro'
interface Props {
	title: string
	desc?: string
}

const { title, desc = 'Pages | BookStore' } = Astro.props
---

<!-- page banner / header -->
<section class="bg-primary">
	<div
		class="container flex min-h-[18.75rem] w-full max-w-[39.5625rem] flex-col items-center justify-center text-center md:min-h-[32.9375rem]"
	>
		<!-- banner title -->
		<Heading variant="h1" classes="text-white text-3xl md:text-[3.125rem]">{title}</Heading>
		<Hr />
		<!-- banner description -->
		<p class="text-light-blue">{desc}</p>
	</div>
</section>
